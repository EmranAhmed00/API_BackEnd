@using Web_BackEnd.Models;
@model IEnumerable<ProgramViewModel>

@{
    ViewData["Title"] = "HavePodcasts";
}

<h1>List of ( Has Podcasts) </h1>

@foreach (ProgramViewModel item in Model)
{
    <div class="row">
        <div class="col-6">
            <p>@item.Name</p>
            <img src="@item.Image" class="img-fluid" />
            <p>@item.Description</p>
        </div>
        <div class="col-6">
            <h3>Podavsnitt</h3>
            @await Component.InvokeAsync("Episode",new { id = item.Id })
        </div>
    </div>
}
